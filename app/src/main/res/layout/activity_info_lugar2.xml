<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#0E3D1F"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:popupTheme="@style/Theme.Unilocal.PopupOverlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="100dp">

        <TextView
            android:id="@+id/infoNombreLugar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del lugar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_vertical|left"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/relatInfo1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:id="@+id/scrollIdInfo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="260dp">

            <LinearLayout
                android:id="@+id/linearLayoutImgInfo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="510dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefono de contacto:"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección:"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Referencia:"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoría:"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horario:"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="510dp"
            android:orientation="vertical"
            android:layout_marginLeft="170dp">

            <TextView
                android:id="@+id/infoContacto1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefono:"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/infoDirección1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección:"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/infoReferencia1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Referencia:"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/infoCategoria1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoría"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/infoHorario1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horario:"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="620dp">

        <Button
            android:id="@+id/btnRechazarLugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="Rechazar"
            android:backgroundTint="#eb0a44"/>

        <Button
            android:id="@+id/btnAutorizarLugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#717978"
            android:text="Autorizar" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>